@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Set New Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(rgba(0,0,0,.65), rgba(0,0,0,.65)), url("https://images.pexels.com/photos/4483610/pexels-photo-4483610.jpeg") center / cover no-repeat;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .card {
            width: 100%;
            max-width: 440px;
            background: rgba(255,255,255,.12);
            backdrop-filter: blur(18px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 30px 60px rgba(0,0,0,.7);
        }

        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 800;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            display: block;
            margin-bottom: .3rem;
            font-weight: 600;
        }

        input {
            width: 100%;
            padding: .7rem .85rem;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.35);
            background: rgba(255,255,255,.18);
            color: #fff;
            font-size: .95rem;
        }

        button {
            width: 100%;
            margin-top: .6rem;
            padding: .75rem;
            border-radius: 12px;
            border: none;
            font-weight: 700;
            cursor: pointer;
            background: linear-gradient(135deg, #28a745, #71e07d);
            transition: .3s;
        }

            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 30px rgba(0,0,0,.6);
            }

        .alert {
            margin-bottom: 1rem;
            padding: .6rem;
            border-radius: 10px;
            background: rgba(0,0,0,.6);
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="card">
        <h1>Set New Password</h1>

        <!-- Display validation errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@e.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="SetNewPassword" asp-controller="Account" method="post">
            <!-- Keep the email hidden so controller knows which user -->
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="form-group">
                <label>New Password</label>
                <input type="password" name="newPassword" placeholder="Enter new password" required />
            </div>

            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" name="confirmPassword" placeholder="Confirm new password" required />
            </div>

            <button type="submit">Update Password</button>
        </form>
    </div>
</body>
</html>
