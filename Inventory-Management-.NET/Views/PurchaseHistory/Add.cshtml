@model Inventory_Management_.NET.Models.PurchaseHistoryViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Add Purchase</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(rgba(0,0,0,.65), rgba(0,0,0,.65)), url("https://images.pexels.com/photos/7019313/pexels-photo-7019313.jpeg") center / cover no-repeat fixed;
            color: #fff;
            display: flex;
            flex-direction: column;
        }

        .top-bar {
            height: 72px;
            padding: 1.5rem 2.5rem;
            display: flex;
            align-items: center;
        }

        .brand {
            font-size: 1.6rem;
            font-weight: 800;
            color: #fff;
            text-decoration: none;
        }

            .brand span {
                color: #00d2ff;
            }

        .page {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 2rem;
        }

        .card {
            width: 100%;
            max-width: 520px;
            background: rgba(255,255,255,0.18);
            backdrop-filter: blur(18px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 30px 60px rgba(0,0,0,.7);
        }

        h1 {
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 800;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        label {
            display: block;
            margin-bottom: .4rem;
            font-weight: 600;
        }

        input, select {
            width: 100%;
            padding: .7rem .85rem;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.35);
            background: rgba(255,255,255,.18);
            color: #fff;
        }

            input:focus, select:focus {
                outline: none;
                border-color: #00d2ff;
                box-shadow: 0 0 14px rgba(0,210,255,.6);
            }

        .text-danger {
            font-size: .8rem;
            color: #ff9b9b;
        }

        button {
            width: 100%;
            margin-top: 1rem;
            padding: .75rem;
            border-radius: 12px;
            border: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            background: linear-gradient(135deg, #28a745, #71e07d);
        }

            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 30px rgba(0,0,0,.6);
            }

        select {
            width: 100%;
            padding: .7rem .85rem;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.35);
            background: rgba(255,255,255,.18);
            color: #fff;
        }

            select option {
                color: #000; 
                background: #fff;
            }

    </style>
</head>

<body>

    <!-- TOP BAR -->
    <div class="top-bar">
        <a asp-controller="Home" asp-action="Index" class="brand">
            Inventory<span>Hub</span>
        </a>
    </div>

    <!-- CENTER -->
    <div class="page">
        <div class="card">
            <h1>Add Purchase</h1>

            <form asp-action="Add" method="post">

                <div class="form-group">
                    <label>Product</label>
                    <select asp-for="ProductId">
                        <option value="">-- Select Product --</option>

                        @foreach (var p in ViewBag.ProductOption)
                        {
                            <option value="@p.ProductId">
                                @p.ProductName
                            </option>
                        }
                    </select>

                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>


                <!-- QUANTITY -->
                <div class="form-group">
                    <label asp-for="purchaseQuantity">Purchase Quantity</label>
                    <input asp-for="purchaseQuantity" type="number" placeholder="Enter quantity" />
                    <span asp-validation-for="purchaseQuantity" class="text-danger"></span>
                </div>

                <!-- DATE -->
                <div class="form-group">
                    <label asp-for="PurchaseDate">Purchase Date</label>
                    <input asp-for="PurchaseDate" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <!-- TOTAL PRICE -->
                <div class="form-group">
                    <label asp-for="TotalPrice">Total Price</label>
                    <input asp-for="TotalPrice" type="number" step="0.01" placeholder="Total amount" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>

                <button type="submit">Add Purchase</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
