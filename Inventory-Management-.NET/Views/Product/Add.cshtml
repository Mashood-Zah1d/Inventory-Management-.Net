@model Inventory_Management_.NET.Models.AddProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

<style>
    body {
        background: linear-gradient(145deg, #1f1f2e, #2c2c3e);
        font-family: 'Inter', sans-serif;
        color: #e0e0e0;
    }

    .card {
        border-radius: 0;
        background-color: #2a2a3d;
        box-shadow: 0 8px 30px rgba(0,0,0,0.5);
        margin-top: 3rem;
    }

    .card-header {
        background: linear-gradient(135deg, #3a7bd5, #00d2ff);
        color: #fff;
        font-weight: 700;
        font-size: 1.5rem;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
        color: #e0e0e0;
    }

    .form-control {
        background-color: #3b3b4f;
        border: 1px solid #555;
        color: #fff;
        border-radius: 0;
        padding: 0.5rem 0.75rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: #49495e;
            color: #fff;
            border-color: #00d2ff;
            box-shadow: 0 0 10px rgba(0,210,255,0.5);
            outline: none;
        }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #71e07d);
        border: none;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        border-radius: 0;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.5);
        }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-header">
            Add New Product
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post">

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter Product Name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label">Description</label>
                    <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Enter Product Description"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductPrice" class="form-label">Price</label>
                    <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" placeholder="Enter Price" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductQuantity" class="form-label">Quantity</label>
                    <input asp-for="ProductQuantity" class="form-control" type="number" step="1" placeholder="Enter Quantity" />
                    <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductCategory" class="form-label">Category</label>
                    <input asp-for="ProductCategory" class="form-control" type="number" placeholder="Enter Category ID" />
                    <span asp-validation-for="ProductCategory" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
