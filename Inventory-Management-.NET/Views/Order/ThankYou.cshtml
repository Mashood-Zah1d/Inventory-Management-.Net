@model Inventory_Management_.NET.Models.BillViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Thank You - Bill</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: url('https://images.pexels.com/photos/259132/pexels-photo-259132.jpeg') center / cover no-repeat fixed;
            color: #fff;
            min-height: 100vh;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: rgba(0,0,0,0.7);
                z-index: -1;
            }

        h2 {
            text-align: center;
            margin: 2rem 0 1rem 0;
            font-weight: 800;
            font-size: 2rem;
            letter-spacing: 1px;
        }

        .bill-container {
            width: 90%;
            max-width: 1000px;
            margin: 2rem auto 4rem auto;
            backdrop-filter: blur(15px);
            background: rgba(255,255,255,0.05);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 15px 40px rgba(0,0,0,0.6);
        }

        /* Customer Info */
        .customer-info {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-bottom: 2rem;
        }

            .customer-info div {
                flex: 1;
                min-width: 200px;
                margin-bottom: 1rem;
            }

            .customer-info label {
                font-weight: 600;
                color: #ccc;
            }

            .customer-info span {
                display: block;
                margin-top: 0.3rem;
                font-weight: 700;
            }

        /* Bill Table */
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 12px;
        }

        thead th {
            background: rgba(255,255,255,0.1);
            font-weight: 700;
            padding: 0.8rem 1rem;
        }

        tbody tr {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            tbody tr:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            }

        tbody td {
            padding: 0.8rem 1rem;
            vertical-align: middle;
        }

        tbody img {
            width: 50px;
            height: 35px;
            border-radius: 6px;
            margin-right: 10px;
            vertical-align: middle;
        }

        /* Grand Total */
        .grand-total {
            text-align: right;
            font-size: 1.3rem;
            font-weight: 700;
            margin-top: 1rem;
        }

        /* Button */
        .btn-home {
            display: block;
            width: 200px;
            margin: 2rem auto 0 auto;
            padding: 0.8rem;
            font-weight: 700;
            border-radius: 14px;
            border: none;
            cursor: pointer;
            background: linear-gradient(135deg, #28a745, #71e07d);
            color: #fff;
            font-size: 1rem;
            text-align: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-home:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            }

        @@media (max-width: 768px) {
            .customer-info {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>

    <h2>Thank You, @Model.Customer.CustomerName!</h2>

    <div class="bill-container">

        <!-- Customer Info -->
        <div class="customer-info">
            <div>
                <label>Name</label>
                <span>@Model.Customer.CustomerName</span>
            </div>
            <div>
                <label>Email</label>
                <span>@Model.Customer.Email</span>
            </div>
            <div>
                <label>Phone</label>
                <span>@Model.Customer.Phone</span>
            </div>
        </div>

        <!-- Order Table -->
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td><img src="@item.image" alt="@item.name" /> @item.name</td>
                        <td>Rs. @item.price</td>
                        <td>@item.qty</td>
                        <td>Rs. @(item.price* item.qty)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="grand-total">
            Grand Total: Rs. @Model.GrandTotal
        </div>

        <a href="/" class="btn-home">Back to Home</a>
    </div>

</body>
</html>
